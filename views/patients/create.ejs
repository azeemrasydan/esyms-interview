<%- include ('../partials/navbar-staff') %>
<div class="row mt-3">
    <div class="col-md-8 m-auto">
        <div class="card card-body text-center">
            <h1 class="mb-3">
                <i class="fas fa-user-injured"></i>
            </h1>
            <h2>
                Add Patient
            </h2>
            <%- include ("../messages") %>
                <form action="/auth/login" method="POST">
                    <div class="form-group">
                        <label for="fname">First Name</label>
                        <input type="text" id="fname" name="fname" class="form-control" placeholder="Enter First Name" />
                    </div>
                    <div class="form-group">
                        <label for="lname">Last Name</label>
                        <input type="text" id="lname" name="lname" class="form-control" placeholder="Enter Last Name" />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control"
                            placeholder="Enter Password" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Add</button>
                </form>
                <form action="/patients">
                        <button type="submit" class="btn btn-danger btn-block" style ="margin-top: 15px">Back</button>
                </form>
        </div>
    </div>
</div>