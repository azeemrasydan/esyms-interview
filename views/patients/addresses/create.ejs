<%- include ('../../partials/navbar-staff') %>

    <% var i=0 %>
        <% patient.address.forEach(function(address){ %>
            <% i=i +1; %>
                <div class="row mt-3">
                    <div class="col-md-8 m-auto">
                        <div class="card card-body text-center">
                            <h1 class="mb-3">
                                <i class="fas fa-address-card"></i>
                            </h1>
                            <h2>
                                #<%= i %> <%= patient.firstName %>'s Address
                            </h2>
                            <%- include ("../../messages") %>
                                <form action="/patients/addresses/delete/<%= address._id %>" method="POST">
                                    <div class="form-group">
                                        <label for="one">Address</label>
                                        <input type="text" id="one" name="one" class="form-control"
                                            placeholder="Lot Number" required value = "<%= address.one %>" readonly />
                                    </div>
                                    <div class="form-group">
                                        <input type="text" id="two" name="two" class="form-control"
                                            placeholder="Street Name" required value = "<%= address.two %>" readonly />
                                    </div>
                                    <div class="form-group">
                                        <label for="postcode">Postcode</label>
                                        <input type="number" id="postcode" name="postcode" class="form-control"
                                            placeholder="41200" required value = "<%= address.postcode %>" readonly />
                                    </div>
                                    <div class="form-group">
                                        <label for="state">State</label>
                                        <input type="text" id="state" name="state" class="form-control"
                                            placeholder="Selangor" required value = "<%= address.state %>" readonly />
                                    </div>
                                    <input type="text" hidden id="patientId" name="patientId" value = "<%= patient._id%>" >
                                    <button type="submit" class="btn btn-danger btn-block">Delete</button>
                                </form>
                        </div>
                    </div>
                </div>
                <% }); %>
                    <div class="row mt-3">
                        <div class="col-md-8 m-auto">
                            <div class="card card-body text-center">
                                <h1 class="mb-3">
                                    <i class="fas fa-address-book"></i>
                                </h1>
                                <h2>
                                    Add New Address
                                </h2>
                                <%- include ("../../messages") %>
                                    <form action="/patients/addresses/create/<%= patient._id %>" method="POST">
                                        <div class="form-group">
                                            <label for="one">Address</label>
                                            <input type="text" id="one" name="one" class="form-control"
                                                placeholder="Lot Number" required />
                                        </div>
                                        <div class="form-group">
                                            <input type="text" id="two" name="two" class="form-control"
                                                placeholder="Street Name" required />
                                        </div>
                                        <div class="form-group">
                                            <label for="postcode">Postcode</label>
                                            <input type="number" id="postcode" name="postcode" class="form-control"
                                                placeholder="41200" required />
                                        </div>
                                        <div class="form-group">
                                            <label for="state">State</label>
                                            <input type="text" id="state" name="state" class="form-control"
                                                placeholder="Selangor" required />
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-block">Add</button>
                                    </form>
                                    <form action="/patients">
                                        <button type="submit" class="btn btn-danger btn-block"
                                            style="margin-top: 15px">Back</button>
                                    </form>
                            </div>
                        </div>
                    </div>